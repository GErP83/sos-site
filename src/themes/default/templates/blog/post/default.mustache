{{<html}}
{{$main}}

<div class="article-with-toc">
    <div>
        <article class="post">
            <div class="meta">
                <time datetime="{{page.publication.html}}">{{page.publication.html}}</time>
                {{#page.readingTime}} &middot; <span class="reading-time">{{page.readingTime}} min read</span>{{/page.readingTime}}
                {{#page.featured}} &middot; <span class="featured">featured</span>{{/page.featured}}
            </div>
            <section>
            
            {{& page.contents}}
                
            </section>

            <footer>
                <br>
                <time datetime="{{page.date}}">{{page.date}}</time>

                
                <div class="author-list">
                {{#page.authors}}
                    <a href="{{permalink}}">
                    {{#imageUrl}}<img class="small rounded" src="{{imageUrl}}" alt="{{title}}">{{/imageUrl}}
                    <span class="name">{{title}}</span>
                    </a>
                {{/page.authors}}
                </div>
                <div class="tag-list">
                {{#page.tags}}
                    <a href="{{permalink}}"><small>{{title}}</small></a>
                {{/page.tags}}
                </div>
            </footer>
                        
            <section class="group">
                {{#empty(page.related)}}
                {{/empty(page.related)}}
                {{^empty(page.related)}}
                <h4>Related posts</h4>                
                <div class="grid grid-221">
                {{#page.related}}
                    {{> partials.blog.post}}
                {{/page.related}}
                </div>
                {{/empty(page.related)}}
            </section>

        </article>
    </div>
    
    <div>
        <div class="support">
            <a href="https://swiftcraft.uk/" target="_blank">
                <img src="/images/logos/swiftcraft.png" alt="SwiftCraft logo">
            </a>
            <h4>
                <a href="https://swiftcraft.uk/" target="_blank">SwiftCraft</a>
            </h4>
            <p>
                SwiftCraft is a UK based Swift Conference, 19th-21st May 2025!
                <br>
                There'll be talks, workshops, and a lot of Swift (Server) fun!
            </p>
            <a class="cta" href="https://swiftcraft.uk/" target="_blank">Get Tickets</a>
        </div>
        
        {{> partials.toc }}

    </div>
</div>

{{/main}}
{{/html}}
